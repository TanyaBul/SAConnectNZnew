{
  "expo": {
    "name": "SA Connect NZ",
    "slug": "sa-connect-nz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "saconnectnz",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.saconnect.nz",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SA Connect NZ uses your location to find South African families near you.",
        "NSPhotoLibraryUsageDescription": "SA Connect NZ uses your photo library to share photos with your SA community.",
        "NSCameraUsageDescription": "SA Connect NZ uses your camera to take profile photos and share with your community."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#B5E3E3",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.saconnect.nz",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#B5E3E3",
          "dark": {
            "backgroundColor": "#1A2A2A"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SA Connect NZ uses your location to find South African families near you."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "SA Connect NZ uses your photos to share with your SA community."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
